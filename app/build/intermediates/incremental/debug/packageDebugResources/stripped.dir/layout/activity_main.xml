<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2E0E6"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:paddingTop="20dp"
        android:text="KALKULATOR BMI"
        android:textAlignment="center"
        android:textColor="#ED1C63"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/weightInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:hint="Waga (kg)"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColorHint="#E7BBC9"
        android:textStyle="bold|italic"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/heightInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Wzrost (cm)"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColorHint="#E7BBC9"
        android:textStyle="bold|italic"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/calculateButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#CA6E8E"
        android:text="Oblicz BMI"
        android:textAllCaps="false"
        android:textColor="#950535"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:fontFamily="sans-serif"
        android:paddingTop="16dp"
        android:text="Twoje BMI: "
        android:textAllCaps="false"
        android:textColor="#BF1B52"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/interpretationText"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:paddingTop="16dp"
        android:text="Interpretacja wyniku: "
        android:textColor="#BF1B52"
        android:textSize="18sp" />
</LinearLayout>